<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="noughtCrossController" class="com.moj.noughtcross.controller.NoughtCrossController"/>
	
	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />
	
	<bean id="gameService" class="com.moj.noughtcross.service.GameServiceImpl"/>
	
	<bean id="gameDao" class="com.moj.noughtcross.dao.GameDaoImpl"/>
	
	<bean id="boardService" class="com.moj.noughtcross.service.BoardServiceImpl"/>
			
</beans>